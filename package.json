{
  "name": "guildmaster",
  "version": "1.0.0",
  "description": "Jeu de gestion de guilde avec combats tactiques",
  "main": "js/main.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/js/$1"
    },
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/main.js"
    ]
  },
  "keywords": ["game", "guild", "rpg", "tactical"],
  "author": "Votre nom",
  "license": "MIT"
} 